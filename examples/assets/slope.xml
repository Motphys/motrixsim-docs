<mujoco>
    <option timestep="0.01" iterations="100"/>

    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="-130" elevation="-20"/>
    </visual>

    <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
      <texture type="2d" name="groundplane" builtin="checker"mark="edge" rgb1="0.4314 0.5294 0.6431" rgb2="0.8157 0.8549 0.9059"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
      <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="1 1" reflectance="0.2"/>
    </asset>


    <worldbody>
      <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
      <!-- ground-->
      <geom name="floor" pos="0 0 -7" size = "0 0 0.01" type="plane" material="groundplane"/>

      <!-- a slop-->
      <geom type="box" size="10 0.7 0.5" rgba=".9 0 0 1" euler="0 45 0"/>

      <!-- a box fall on the slop-->
      <body name="box" pos="0 0 2">
        <joint type="free"/>
        <geom priority="1" type="box" size="0.5 .5 .5" rgba="0 .9 0 1" friction="1 0 0" solimp="0 0 0.01"/> 
      </body>
    </worldbody>
  </mujoco>