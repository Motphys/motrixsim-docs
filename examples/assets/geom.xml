<mujoco>
  <option timestep="0.01"/>
  <default>
    <default class="mesh_v">
      <geom type="mesh"/>
    </default>
  </default>
  <asset>
    <texture name="file_plane" type="2d" builtin="checker" width="128" height="128" rgb1="0.5 0.4 0.3" rgb2="0.6 0.5 0.4"/>
    <material name="file_plane" texture="file_plane" texrepeat="4 4" texuniform="true"/>
    <hfield name="file_terrain" file = "common/terrain.hfield" content_type ="hfield" size="5 5 2 1"/>
    <mesh class="mesh_v" name="m1" file="go1/assets/trunk.stl"/>
  </asset>
  <worldbody>
    <light name="light" pos="0 0 3" type="directional"/>
    <camera name="fixed" pos="0 -3 3" xyaxes="1 0 0 0 1 1"/>
    <geom name="floor" type="plane" size="5 5 0.1" pos="0 0 0" rgba="0.4 0.4 0.4 1"/>
    <geom name="cylinder_A" type="cylinder" size="0.5 1" pos="3 0 3" rgba="0.6 0 1 1"/>
    <geom name="capsule_A" type="capsule" size="1 0.2" pos="3 3 1" rgba="0.6 0.9 0.1 1"/>
    <geom name="heightfield" type="hfield" pos = "0 10 1" hfield="file_terrain" material = "file_plane"/>
    <geom class="mesh_v" mesh="m1" pos="-1 0 1"/>
    <body name="base" pos="0 0 0.1">
      <body name="arm_A" pos="0 0 0"> 
        <joint name="joint_A" type="hinge" axis="0 0 1" limited="false"/>
        <geom name="cube_A" type="box" size="0.25 0.25 0.5" pos="0 0 0.5" rgba="1 0 0 1"/>
        
        <body name="arm_B" pos="0 0 1">  
          <joint name="joint_B" type="hinge" axis="0 0 1" limited="false"/>
          <geom name="sphere_A" type="sphere" size="0.5" pos="0 0 0.5" rgba="0 0 1 1"/>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>