<mujoco>
  <option timestep="0.01"/>
  <statistic center="0 0 0" extent="1.5"/>
  <worldbody>
    <light name="light" pos="0 0 3" directional = "true"/>
    <camera name="fixed" pos="0 -3 2" xyaxes="1 0 0 0 0.2 0.8"/>
    <camera name="track" pos="5 0 0.8"  mode="targetbody" target="base"/>
    <geom name="floor" type="plane" size="5 5 0.1" pos="0 0 0" rgba="0.4 0.4 0.4 1" group="3"/>

    <body name="base" pos="0 0 0.1">
      <body name="slot" pos="0 0 0"> 
        <joint name="slider" type="slide" axis="1 0 0" limited="true" range = "-2 2"/>
        <geom name="cube_A" type="box" size="0.5 0.25 0.25" pos="0 0 0.25" rgba="1 0 0 1"/>
        
        <body name="bar" pos="0 0 0.5"> 
          <light name="front light" pos=".1 0 .02" dir="0 2 -1" diffuse="1 1 1" cutoff="30"/>

          <joint name="ball" type="ball" limited="true" range = "0 20"/>
          <geom name="bar" type="box" size="0.15 0.15 0.4" pos="0 0 0.4" rgba="0 0 1 1" group="1"/>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="actuator_slider" joint="slider" gear="500"/>
  </actuator>
</mujoco>